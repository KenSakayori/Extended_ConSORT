sum3(n, p) 
[ <#n: int, p: int ref > -> 
  <#n: int, p: int ref | int> ]
{
  if n <= 0 then {
    0
  } else {
    if n = 1 then {
      let x = *p in
      x
    } else {
      let m = n - 1 in
      let q = p + m in
      let y = *q in
      let s = sum3(m, p) in
      alias(q = p + m);
      let z = y + s in
      z
    } 
  }
}

