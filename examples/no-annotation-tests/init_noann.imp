init(n, p) 
[ <#n: int, p: int ref> -> 
  <#n: int, p: int ref | int> ]
{
  if n <= 0 then {
    1
  } else {
    p := 0;
    if n = 1 then {
      1
    } else {
      let q = p + 1 in
      let m = n - 1 in
      let d = init(m, q) in
      alias(q = p + 1);
      1
    }
  }
}

