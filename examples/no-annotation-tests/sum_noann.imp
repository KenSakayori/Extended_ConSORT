sum(n, p) 
[ <#n: int, p: int ref (0, n - 1, 0.5)> -> 
  <#n: int, p: int ref (0, n - 1, 0.) | int > ]
{
  if n <= 0 then {
    0
  } else {
    let x = *p in
    let q = p + 1 in
    let m = n - 1 in
    let s = sum(m, q) in
    let y = x + s in
    y
  }
}

