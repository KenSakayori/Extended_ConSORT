sum(n, p) 
[ <#n: int, p: int ref> -> 
  <#n: int, p: int ref | int> ]
{
  if n <= 0 then {
    0
  } else {
    let x = *p in
    if n = 1 then {
      x
    } else {
      let q = p + 1 in
      let m = n - 1 in
      let s = sum(m, q) in
      let y = x + s in
      y
    } 
  }
}

